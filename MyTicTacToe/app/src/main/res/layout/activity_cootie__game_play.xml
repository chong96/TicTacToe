<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.mytictactoe.Cootie_GamePlay">

    <Button
        android:id="@+id/realRollButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="121dp"
        android:text="Roll"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/cbBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:checked="false"
        android:text="Body"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <CheckBox
        android:id="@+id/cbTeeth1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teeth"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/cbEyes1" />

    <CheckBox
        android:id="@+id/cbAntennae1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antennae"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/cbHead1" />

    <CheckBox
        android:id="@+id/cbHead1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Head"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/cbBody1" />

    <CheckBox
        android:id="@+id/cbEyes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyes"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/cbAntennae1" />

    <CheckBox
        android:id="@+id/cbLegs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legs"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/cbTeeth1" />

    <CheckBox
        android:id="@+id/cbEyes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:checked="false"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:text="Eyes"
        app:layout_constraintBaseline_toBaselineOf="@+id/cbEyes1"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/cbTeeth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teeth"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/cbTeeth1" />

    <CheckBox
        android:id="@+id/cbAntennae2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antennae"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        app:layout_constraintBaseline_toBaselineOf="@+id/cbAntennae1"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/cbHead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:duplicateParentState="false"
        android:text="Head"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        app:layout_constraintBaseline_toBaselineOf="@+id/cbHead1"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/cbBody2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Body"
        app:layout_constraintRight_toRightOf="parent"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        app:layout_constraintBaseline_toBaselineOf="@+id/cbBody1" />

    <CheckBox
        android:id="@+id/cbLegs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:text="Legs"
        app:layout_constraintBaseline_toBaselineOf="@+id/cbLegs1"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"
        android:text="@string/player1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/player2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="26dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="139dp"
        android:layout_height="111dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bug"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/realRollButton" />

</android.support.constraint.ConstraintLayout>
